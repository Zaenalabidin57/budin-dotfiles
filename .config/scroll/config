# Workspace rules:
#
# Opens a terminal when creating workspace 6
# workspace 6 exec kitty


#
# Status Bar:
#
# Read `man 5 scroll-bar` for more information about this section.
bar {
    position top

    font pango:AbudinCode 9
    gaps 5px


    # When the status_command prints a new line to stdout, scrollbar updates.
    # The default just shows the current date and time.
           #status_command i3status -c ~/.config/i3/i3-status.conf
           status_command ~/.config/scripts/abodindwl/bar_dwl.sh
           #status_command waybar -c ~/.config/waybar/confeegsway

    colors {
        statusline #222222
        background #32323200
        #focused_workspace #9B69D9
        inactive_workspace #32323200 #32323200 #5c5c5c
        focused_workspace #32323200 #323232FF #ffffff
        active_workspace #32323200 #32323200 #5c5c5c
        scroller #2F343A00 #2F343A00 #22222222
        scroller_indicator no
    }
}
